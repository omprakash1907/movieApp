        <div class="flip-card-back">
          <p class="title">
            <%= movie.name %>
          </p>
          <p>
            <%= movie.description %>
          </p>
          <p>
            <% const publishDate=new Date(movie.year); const day=publishDate.getDate().toString().padStart(2, '0'
              ); const month=(publishDate.getMonth() + 1).toString().padStart(2, '0' ); // Month is zero-based const
              year=publishDate.getFullYear(); const formattedPublishDate=`${day}/${month}/${year}`; %>
              <%= formattedPublishDate %>
          </p>
          <p>
            <%= movie.genre %>
          </p>
          <p>
            <%= movie.rating %>
          </p>
        </div>
      </div>
